#!/bin/bash

echo "Creating a desktop entry for Pi-Ware..."
sleep 2s
mkdir -p /home/pi/.local/share/applications
echo "[Desktop Entry]
Name=Pi-Ware
Comment="Raspberry Pi app store"
Exec=cd /home/pi/pi-ware && lxterminal -e 'git pull' && sleep 2s && sudo python3 /home/pi/pi-ware/store.py
Icon=/home/pi/pi-ware/icon.png
Categories=Utility;
Type=Application
Terminal=true" > /home/pi/.local/share/applications/pi-ware.desktop
sleep 1s
echo "Done!"
echo "You can find Pi-Ware in Menu > Accessories > Pi-Ware."
sleeps 2s
