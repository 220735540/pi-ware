#!/bin/bash

#Variables
fwe=""
ers=""

#Functions
function error {
  echo -e "\e[91m$1\e[39m"
  if [ "$2" == "exit" ]; then
    exit 1
  else
    fwe="1"
    ers+="$1"
  fi
}

function warning {
  echo -e "\e[91m$2\e[39m"
  sleep "$1"
}

#Main
echo "Uninstalling Pi-Ware"
rm -rf $HOME/.local/share/application/pi-ware.desktop
rm -rf $HOME/.local/share/pi-ware/*

#Inform user that the uninstall has finished
#Check if finished with errors
if [ "${fwe}" == "1" ]; then
  echo "This script finished with errors, Here are the errors: ${ers}"
  exit 1
elif [ "${fwe}" == "0" ]; then
  echo "Successfully uninstalled Pi-Ware."
  echo "Closing in 5 seconds."
  sleep 5s
  exit 0
fi
